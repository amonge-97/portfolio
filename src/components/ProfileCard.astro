---
import LinkedIn from '../icons/linkedIn.astro';
import Email from '../icons/Email.astro';
import GitHub from '../icons/GitHub.astro';
import { useTranslations } from '../i18n/utils';

const t = useTranslations(Astro);
---

<div class="c-card b-profile_card">
    <div class="b-profile">
        <img class="b-profile_img" src=`/img/profile.png` alt="Profile Picture">
        <h2 class="b-profile_name">Kevin Alejandro Monge Reyes</h2>
    </div>

    <section class="b-profile_description">
        <p>ðŸ’¡ {t('profile.short.about.me.p1')} <span class="b-profile_salesforce">{t('profile.short.about.me.p2')}</span> {t('profile.short.about.me.p3')}</p>
    </section>

    <section class="b-profile_contact">
        <a class="c-btn" href="https://www.linkedin.com/in/kevin-alejandro-monge-reyes-4049911a5" target="_blank">
            <LinkedIn />
            {t('profile.contact.linkedin')}
        </a>
        <a class="c-btn" href="mailto: amonge_rey@hotmail.com">
            <Email />
            {t('profile.contact.email')}
        </a>
        <a class="c-btn" href="https://github.com/amonge-97/portfolio" target="_blank">
            <GitHub />
            {t('profile.contact.repo')}
        </a>
    </section>
</div>